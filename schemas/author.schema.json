{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Author file schema",
  "type": "object",
  "required": ["name", "tags", "works"],
  "properties": {
    "name": { "type": "string" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "works": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "title"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["original", "secondary"]
          },
          "title": {
            "oneOf": [
              { "type": "string" },
              {
                "type": "object",
                "required": ["original"],
                "properties": {
                  "original": { "type": "string" },
                  "en": { "type": "string" },
                  "zh": { "type": "string" }
                },
                "additionalProperties": false
              }
            ]
          },
          "year": { "type": "integer" },
		  "links": {
		    "type": "array",
		    "items": { "type": "string", "format": "uri" },
		    "minItems": 1
		  },
          "note": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "resources": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title"],
        "properties": {
          "title": { "type": "string" },
		  "links": {
		    "type": "array",
		    "items": { "type": "string", "format": "uri" },
		    "minItems": 1
		  },
          "note": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
